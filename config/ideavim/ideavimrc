source ~/.config/nvim/init.vim

nmap <leader>f :action GotoFile<cr>
nmap <leader>a :action FindInPath<cr>
nmap <leader>t :action GotoSymbol<cr>
nmap <leader>g :action ToggleDistractionFreeMode<cr>

nmap gd :action GotoDeclaration<cr>

nmap gcc :action CommentByLineComment<cr>
vmap gc :action CommentByBlockComment<cr>

set surround
set clipboard+=ideaputset ideajoinset ideaput
