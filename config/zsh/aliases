# vim: set ft=zsh:
# Shortkeys to make live easier

# NPM
alias n='npm'
alias na='npm audit'
alias nb='npm run build'
alias ncc='npm cache clear --force'
alias ni='npm install'
alias nic='npm ci'
alias nid='npm install --save-dev'
alias nig='npm install --global'
alias nis='npm install --save'
alias no='npm outdated'
alias nog='npm outdated -g --depth=0'
alias nr='npm run'
alias ns='npm run start'
alias nt='npm run test'
alias nx='npx'

# Cargo
alias c='cargo'
alias ca='cargo audit'
alias cb='cargo build --release'
alias cc='cargo clean'
alias ci='cargo install'
alias cis='cargo add'
alias cr='cargo run'
alias ct='cargo test'

# Mix
alias m='mix'
alias mt='mix test'

# NeoVim/Vim/VSCode
alias code='nvim'
alias svim='sudo vim -i NONE'
alias v='nvim'
alias vi='nvim'
alias vim='nvim'
alias vscode='nvim'

# Tmux
alias tm='tmux'
alias tma='tmux attach'
alias tmk='tmux kill-session'
alias tml='tmux ls'

# Git
alias fix='git diff --name-only | uniq | xargs -o $EDITOR'
alias g='git'
alias ga='git add'
alias gam='git commit --amend'
alias gamn='git commit --amend --no-edit'
alias gap='git add --patch'
alias gb='git branch'
alias gbr='git branch --merged | rg -v "master|main|^\*" | xargs git branch -D'
alias gbra='git branch | rg -v "master|main|^\*" | xargs git branch -D'
alias gcm='git commit -m'
alias gl='git log'
alias gp='git push'
alias gpf='git push --force-with-lease'
alias gpl='git pull --rebase'
alias gr='git restore'
alias gs='git switch'
alias gsc='git switch -c'
alias gsd='git switch develop'
alias gsm='git switch main 2>/dev/null | git switch master'
alias gws='git status'

# Movement
alias ..='cd ../'
alias ...='cd ../../'
alias d='dirs -v | head -10'
alias 0='cd .'
alias 1='cd -'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'
alias 7='cd -7'
alias 8='cd -8'
alias 9='cd -9'

# Miscellaneous
alias p='pwd'
alias l='ls -lahgG --color=auto'
alias rm='rm -i'
alias mv='mv -i'
alias ln='ln -i'
alias mkdir='mkdir -p'

alias kill_ds="fd -H '^\.DS_Store$' -tf -X rm -rf"
alias kill_modules="fd 'node_modules' -td -X rm -rf"

alias mine='sudo chown -R $(whoami):admin '

alias backup='rsync --exclude-from="${XDG_CONFIG_HOME}/rsync/excludes.txt" -avP'

alias brew_deps="brew leaves | xargs brew deps --include-build --tree"
