# Shortkeys to make live easier

# NPM
alias n='npm'
alias na='npm audit'
alias ncc='npm cache clear --force'
alias ni='npm install'
alias nic='rm -rf node_modules && npm ci'
alias nid='ni --save-dev'
alias nig='ni --global'
alias nis='ni --save'
alias no='npm outdated'
alias nog='npm outdated -g --depth=0'
alias nr='npm run'
alias nx='npx'

# Yarn
alias y='yarn'
alias ya='yarn audit'
alias yi='yarn install --prefer-offline'
alias yic='rm -rf node_modules/.yarn-integrity && yi'
alias yid='yarn add --dev'
alias yig='yarn add --global'
alias yis='yarn add'
alias yo='yarn outdated'
alias yog='yarn global outdated'
alias yr='yarn run'
alias yx='yarn dlx'

# NeoVim/Vim
alias e='vim'
alias svim='sudo vim'
alias v='vim'
alias vi='vim'
alias vim='nvim'

# Tmux
alias tm='tmux'
alias tma='tmux attach'
alias tml='tmux ls'

# Git
alias fix='git diff --name-only | uniq | xargs -o $EDITOR'
alias g='git'
alias ga='git add'
alias gam='git commit --amend'
alias gamn='git commit --amend --no-edit'
alias gap='git add --patch'
alias gb='git branch'
alias gbr='git branch --merged | rg -v "master|main" | xargs git branch -D'
alias gbra='git branch | rg -v "master|main" | xargs git branch -D'
alias gcm='git commit -m'
alias gl='git log'
alias gp='git push'
alias gpl='git pull --rebase'
alias gr='git restore'
alias gs='git switch'
alias gsc='git switch -c'
alias gsd='git switch develop'
alias gsm='git switch main 2>/dev/null | git switch master'
alias gws='git status'

# General
alias c='mcdir'
alias p='pwd'
alias t='tree'
alias l='ls -lahgG'
alias ..='cd ../'
alias ...='cd ../../'
alias cp='cp -i'
alias rm='rm -i'
alias mv='mv -i'
alias ln='ln -i'
alias mkdir='mkdir -p'

alias kill_ds="fd -H -I '^\.DS_Store$' -tf -X rm"
alias kill_modules="fd -H -I '^node_modules$' -td -X rm -r"
alias mine='sudo chown -R $(whoami):admin '

alias d='dirs -v | head -10'
alias 0='cd .'
alias 1='cd -'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'
alias 7='cd -7'
alias 8='cd -8'
alias 9='cd -9'
