# Shortkeys to make live easier

# NPM
alias n='npm'
alias na='npm audit'
alias nb='npm run build'
alias ncc='npm cache clear --force'
alias ni='npm install'
alias nic='npm ci'
alias nid='npm install --save-dev'
alias nig='npm install --global'
alias nis='npm install --save'
alias no='npm outdated'
alias nog='npm outdated -g --depth=0'
alias nr='npm run'
alias ns='npm run start'
alias nt='npm run test'
alias nx='npx'

# Cargo
alias ca='cargo add'
alias cb='cargo build --release'
alias ci='cargo install'
alias cc='cargo clean'
alias co='cargo'
alias cp='cargo package'
alias cr='cargo run'
alias cs='cargo search'
alias ct='cargo test'

# NeoVim/Vim/VSCode
alias svim='sudo vim -i NONE'
alias v='vim'
alias vi='vim'
alias vim='vim -i NONE'
alias vscode='code'

# Tmux
alias tm='tmux'
alias tma='tmux attach'
alias tml='tmux ls'

# Git
alias fix='git diff --name-only | uniq | xargs -o $EDITOR'
alias g='git'
alias ga='git add'
alias gam='git commit --amend'
alias gamn='git commit --amend --no-edit'
alias gap='git add --patch'
alias gb='git branch'
alias gbr='git branch --merged | egrep -vi "master|main|^\*" | xargs git branch -D'
alias gbra='git branch | egrep -vi "master|main|^\*" | xargs git branch -D'
alias gcm='git commit -m'
alias gl='git log'
alias gp='git push'
alias gpl='git pull --rebase'
alias gr='git restore'
alias gs='git switch'
alias gsc='git switch -c'
alias gsd='git switch develop'
alias gsm='git switch main 2>/dev/null | git switch master'
alias gws='git status'

# General
alias c='mcdir'
alias p='pwd'
alias t='tree'
alias l='ls -lahgG'
alias ..='cd ../'
alias ...='cd ../../'
alias cp='cp -i'
alias rm='rm -i'
alias mv='mv -i'
alias ln='ln -i'
alias mkdir='mkdir -p'

alias kill_ds="find . -name '.DS_Store' -type f -delete"
alias kill_modules="find . -name 'node_modules' -type d -delete"
alias mine='sudo chown -R $(whoami):admin '

alias d='dirs -v | head -10'
alias 0='cd .'
alias 1='cd -'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'
alias 7='cd -7'
alias 8='cd -8'
alias 9='cd -9'

alias backup='rsync --exclude-from="$XDG_CONFIG_HOME/rsync/exclude.txt" -avP'

alias brew_deps="brew leaves | xargs brew deps --include-build --tree"
