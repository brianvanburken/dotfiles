# Shortkeys to make live easier

# NPM
alias n='npm'
alias ni='n install'
alias nic='rm -rf node_modules && ni'
alias nid='ni --save-dev'
alias nig='ni -g'
alias nis='ni --save'
alias nr='n run'
alias nx='npx'

alias ncu='nx npm-check -u --no-emoji'
alias ncgu='nx npm-check -gu --no-emoji'

# Yarn
alias y='yarn'
alias yi='y install'
alias yic='rm -rf node_modules && yi'
alias yid='y add --dev'
alias yig='y add --global'
alias yis='y add'
alias yr='y run'
alias yx='yarn dlx'

# NeoVim/Vim
alias e='vim'
alias svim='sudo vim'
alias v='vim'
alias vi='vim'
alias vim='nvim'

# Git
alias fix='git diff --name-only | uniq | xargs -o $EDITOR'
alias g='git'
alias ga='git add'
alias gam='git commit --amend'
alias gap='ga --patch'
alias gb='git branch'
alias gbr='gb --merged | egrep -v "(^\*|master|develop)" | xargs git branch -D'
alias gbra='gb | egrep -v "(^\*|master|develop)" | xargs git branch -D'
alias gcm='git commit -m'
alias gco='git checkout'
alias gl='git log'
alias gp='git push'
alias gpl='git pull --rebase'
alias gr='git rebase'
alias gs='git switch'
alias gsd='git switch develop'
alias gsm='git switch master'
alias gws='git status'

# General
alias backup='rsync -avh --progress --delete --exclude=".*"'

alias t='tree'
alias l='ls -lahgG'
alias ..='cd ../'
alias ...='cd ../../'
alias cp='cp -i'
alias rm='rm -i'
alias mv='mv -i'
alias ln='ln -i'
alias mkdir='mkdir -p'

alias kill_ds="fd -H -I '^\.DS_Store$' -tf -X rm"
alias kill_modules="fd -H -I '^node_modules$' -td -X rm -r"
alias mine='sudo chown -R $(whoami):admin '

alias d='dirs -v | head -10'
alias 1='cd -'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'
alias 7='cd -7'
alias 8='cd -8'
alias 9='cd -9'
