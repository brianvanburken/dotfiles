# Shortkeys to make live easier

# NPM
alias n='npm'
alias nr='npm run'
alias ni='npm install'
alias nis='npm install --save'
alias niS='npm install --save-dev'
alias ngi='npm install -g'
alias nci='rm -rf node_modules/ && npm install'
alias nt='npm test'
alias nb='npm build'
alias ncu='npx npm-check -u --no-emoji'
alias ncgu='npx npm-check -gu --no-emoji'

# NeoVim/Vim
alias vim='nvim'
alias vi='vim'
alias v='vim'
alias e='vim'

# Git
alias g='git'
alias ga='git add'
alias gam='git commit --amend'
alias gap='git add --patch'
alias gb='git branch'
alias gbr='git branch | grep -v "master" | xargs git branch -D'
alias gca='git add .'
alias gcm='git commit -m'
alias gco='git checkout'
alias gl='git log'
alias gp='git push'
alias gpl='git pull --rebase'
alias gr='git rebase'
alias gsd='git switch develop'
alias gsm='git switch master'
alias gws='git status'

# Open all merge conflicts or currently changed files in set editor
alias fix='git diff --name-only | uniq | xargs -o $EDITOR'

# Elm shortcuts
alias em='elm make'
alias er='elm repl'
alias et='elm test'
alias el='elm live'
alias ef='elm-format'
alias epi='elm install'
alias et='elm-thanks'
alias eci='rm -rf elm-stuff/ && elm-package install -y'
alias emt='elm make --optimize --output=/dev/null'
alias ej='elm-json'
alias ea='elm-analyse'

# Python/Pip shortcuts
alias p='pipenv'
alias pi='pipenv install'
alias pu='pipenv uninstall'
alias pl='pipenv lock'

# Tmux
alias t='tmux attach || tmux new-session'
alias ta='tmux attach -t'
alias tn='tmux new-session'
alias tl='tmux list-sessions'

# General
alias dr='docker-compose down && docker-compose up'
alias serve='python -m SimpleHTTPServer'
alias yv='youtube-dl -f 22 ' # videos
alias yt='youtube-dl'

alias l='ls -lahgG'
alias ..='cd ../'
alias ...='cd ../../'
alias cp='cp -i'
alias rm='rm -i'
alias mv='mv -i'
alias ln='ln -i'
alias mkdir='mkdir -p'
alias cls='clear'

alias kill_ds="fd -H '^\.DS_Store$' -tf -X rm"
alias kill_modules="fd -H -I '^node_modules$' -td -X rm -r"
alias mine='sudo chown -R $(whoami):admin '

alias d='dirs -v | head -10'
alias 1='cd -'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'
alias 7='cd -7'
alias 8='cd -8'
alias 9='cd -9'
