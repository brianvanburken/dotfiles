# Shortkeys to make live easier

# NPM
alias n='npm'
alias ni='npm install'
alias nic='rm -rf node_modules/ && npm install'
alias nid='npm install --save-dev'
alias nig='npm install --global'
alias nis='npm install --save'
alias no='npm outdated'
alias nog='npm outdated -g --depth=0'
alias nr='npm run'
alias nx='npx'

# Yarn
alias y='yarn'
alias yi='yarn install'
alias yic='rm -rf node_modules/.yarn-integrity && yarn install'
alias yid='yarn add --dev'
alias yig='yarn add --global'
alias yis='yarn add'
alias yo='yarn outdated'
alias yog='yarn global outdated'
alias yr='yarn run'
alias yx='yarn dlx'

# NeoVim/Vim
alias e='vim'
alias svim='sudo vim'
alias v='vim'
alias vi='vim'
alias vim='nvim'

# Git
alias fix='git diff --name-only | uniq | xargs -o $EDITOR'
alias g='git'
alias ga='git add'
alias gam='git commit --amend'
alias gap='git add --patch'
alias gb='git branch'
alias gbr='git branch --merged | egrep -v "(^\*|master|develop)" | xargs git branch -D'
alias gbra='git branch | egrep -v "(^\*|master|develop)" | xargs git branch -D'
alias gcm='git commit -m'
alias gco='echo "Use git switch or restore instead"'
alias gl='git log'
alias gp='git push'
alias gpl='git pull --rebase'
alias gr='git restore'
alias gs='git switch'
alias gsc='git switch -c'
alias gsd='git switch develop'
alias gsm='git switch master'
alias gws='git status'

# General
alias c='mcdir'

alias t='tree'
alias l='ls -lahgG'
alias ..='cd ../'
alias ...='cd ../../'
alias cp='cp -i'
alias rm='rm -i'
alias mv='mv -i'
alias ln='ln -i'
alias mkdir='mkdir -p'

alias kill_ds="fd -H -I '^\.DS_Store$' -tf -X rm"
alias kill_modules="fd -H -I '^node_modules$' -td -X rm -r"
alias mine='sudo chown -R $(whoami):admin '

alias d='dirs -v | head -10'
alias 1='cd -'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'
alias 7='cd -7'
alias 8='cd -8'
alias 9='cd -9'
