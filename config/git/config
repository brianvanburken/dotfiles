[credential]
	helper = osxkeychain

[color]
	ui = true

[push]
	default = current

[core]
	editor = nvim
	excludesfile = ~/.config/git/ignore
	attributesfile = ~/.config/git/attributes
	hooksPath = ~/.config/git/hooks/

[alias]
	lastchange = log -p -n 1
	trim = !git remote prune origin && git gc
	tag = tag -s

[include]
	path = ~/.config/git/config.local

[rebase]
	autostash = true

[diff "json"]
	textconv = json_pp

[user]
	name = Brian van Burken
	useConfigOnly = true
