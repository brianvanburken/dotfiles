# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true


[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 80
tab_width = 4
trim_trailing_whitespace = true

[*.{diff,md}]
trim_trailing_whitespace = false

[*.{js,ts,json}]
indent_size = 2

[*.{html,css,scss,sass}]
indent_size = 2

[{Makefile,*.mk,.gitconfig}]
indent_style = tab
