# Shortkeys to make live easier

# General
alias cp='cp -i'
alias rm='rm -i'
alias mv='mv -i'
alias ln='ln -i'
alias mkdir='mkdir -p'
alias cls='clear'

alias kill_ds="find . -name .DS_Store -type f -delete"
alias kill_modules="find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +"
alias mine='sudo chown -R $(whoami):admin '

# NPM
alias n='npm'
alias nr='npm run'
alias ni='npm install'
alias nis='npm install --save'
alias niS='npm install --save-dev'
alias ngi='npm install -g'
alias nci='rm -rf node_modules/ && npm install'
alias nt='npm test'
alias nb='npm build'
alias ncu='npx npm-check -u --no-emoji'
alias ncgu='npx npm-check -gu --no-emoji'

# NeoVim/Vim
if type nvim > /dev/null 2>&1; then
  alias vim='nvim'
fi
alias vi='vim'
alias v='vim'
alias e='vim'

# Git
alias g='git'
alias gam='git commit --amend'

# Open all merge conflicts or currently changed files in Vim
alias fix='git diff --name-only | uniq | xargs -o vim'
alias gbr='git branch | grep -v "master" | xargs git branch -D'
alias grm='git rebase -i origin/master'
alias grhh='git reset HEAD --hard'

# Elm shortcuts
alias em='elm make'
alias er='elm repl'
alias et='elm test'
alias el='elm live'
alias ef='elm-format'
alias epi='elm install'
alias et='elm-thanks'
alias eci='rm -rf elm-stuff/ && elm-package install -y'
alias emt='elm make --optimize --output=/dev/null'
alias ej='elm-json'
alias ea='elm-analyse'

# Python/Pip shortcuts
alias p='pipenv'
alias pi='pipenv install'
alias pu='pipenv uninstall'
alias pl='pipenv lock'

# The silver searcher
alias af='ag -g'
alias ag='ag --path-to-ignore $XDG_CONFIG_HOME/the_silver_searcher/ignore '

# Other
alias dr='docker-compose down && docker-compose up'
alias serve='python -m SimpleHTTPServer'
alias yv='youtube-dl -f 22' # videos
alias ym='youtube-dl -f 140' # music
alias yt='youtube-dl'
